set -e

STATE="$1"
FILES="$2"

case "$STATE" in

    SupportsRollback)
        echo "Yes"
        ;;

    ArtifactInstall)
        if [ $(ls "$FILES/files/" | wc -l) -ne 1 ]; then
            echo "Unexpected list of files in artifact:" 1>&2
            ls "$FILES/files/" 1>&2
            exit 1
        fi

        if [ $(ls "$FILES/files"/*.yml 2>/dev/null | wc -l) -eq 1 ]; then
            MANIFEST="$(ls "$FILES/files"/*.yml)"
        elif [ $(ls "$FILES/files"/*.yaml 2>/dev/null | wc -l) -eq 1 ]; then
            MANIFEST="$(ls "$FILES/files"/*.yaml)"
        else
            echo "No yaml manifest in artifact:" 1>&2
            ls "$FILES/files/" 1>&2
            exit 1
        fi

        RET=0
        mender-orchestrator \
            install \
            --stop-before ArtifactCommit \
            --stop-before ArtifactRollback \
            --exit-on-reboot \
            "$MANIFEST" \
            || RET=$?
        if [ $RET -eq 4 ]; then
            # Needs system reboot, but otherwise successful.
            exit 0
        elif [ $RET -eq 0 ]; then
            # Doesn't need reboot.
            touch "$FILES/tmp/no-needs-reboot"
            sync "$FILES/tmp/no-needs-reboot"
            sync "$FILES/tmp"
        fi
        exit $RET
        ;;

    NeedsArtifactReboot)
        if [ -e "$FILES/tmp/no-needs-reboot" ]; then
            echo "No"
        else
            echo "Automatic"
        fi
        ;;

    ArtifactCommit)
        mender-orchestrator \
            resume \
            --stop-before ArtifactRollback \
            --stop-before Cleanup
        ;;

    ArtifactRollback)
        RET=0
        mender-orchestrator \
            rollback \
            --stop-before Cleanup \
            --exit-on-reboot \
            || RET=$?
        if [ $RET -eq 4 ]; then
            # Needs system reboot, but otherwise successful.
            exit 0
        elif [ $RET -eq 0 ]; then
            # Doesn't need reboot. Should already exist, but just in case.
            touch "$FILES/tmp/no-needs-reboot"
            sync "$FILES/tmp/no-needs-reboot"
            sync "$FILES/tmp"
        fi
        exit $RET
        ;;

    Cleanup)
        mender-orchestrator resume
        ;;

esac

exit 0
